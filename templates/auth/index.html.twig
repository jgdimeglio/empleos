{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesión{% endblock %}

{% block body %}
        {% if error %}
            <div class="alert alert-danger">{{ error.message }}</div>
        {% endif %}

        <div class="container" style="max-width: 500px">
            <h1>Iniciar sesión</h1>
            <form action="{{ path('login') }}" method="post" role="form" class="form">
                <div class="form-group">
                    <label for="username">Email</label>
                    <input type="email" id="username" name="_username" value="{{ last_username }}" class="form-control" autofocus="autofocus" required="required" />
                </div>

                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="_password" class="form-control" required="required"/>
                </div>

                <input type="checkbox" id="remember_me" name="_remember_me" checked />
                <label for="remember_me">Recuérdame</label>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary form-control">Entrar</button>
                </div>
            </form>
        </div>
{% endblock %}
