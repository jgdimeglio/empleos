{{ form_start(form) }}
    <div class="row">
        <div class="col-6">
           	{{ form_label(form.title, 'Título') }} {{ form_widget(form.title) }}
        </div>
         <div class="col-3">
           	{{ form_label(form.startDate, 'Fecha de inicio') }} {{ form_widget(form.startDate) }}
        </div>
         <div class="col-3">
           	{{ form_label(form.endDate, 'Fecha de finalización') }} {{ form_widget(form.endDate) }}
        </div>
    </div>
    <div class="row">
         <div class="col-12">
           	{{ form_label(form.description, 'Descripción') }} {{ form_widget(form.description) }}
        </div>
    </div>
    <div class="container mt-2">
      <div class="row">
        <div class="col text-center">
          <button class="btn btn-primary">{{ button_label|default('Guardar') }}</button>
        </div>
      </div>
    </div>
{{ form_end(form) }}
