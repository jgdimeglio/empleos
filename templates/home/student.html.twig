{% extends 'base.html.twig' %}

{% block title %}Listado de Estudiantes{% endblock %}

{% block body %}
    <h1>Listado de estudiantes</h1>
        {% for student in students %}
            <div class="card mb-2">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-person-circle"></i> {{ student.name }} {{ student.surname }}</h5>
                    <ul>
                        <li>Fecha de nacimiento: {{ student.birthDate ? student.birthDate|date('d-m-Y') : '' }}</li>
                        <li>Documento: {{ student.documentType }} {{ student.documentNumber }}</li>
                        <li>Correo electrónico: {{ student.mail }}</li>
                    </ul>
                    <h5><i class="bi bi-book"></i> Carrera: {{ student.career }}  / Año de ingreso: {{ student.yearCareer }}</h5>
                    <h5><i class="bi bi-arrow-right-circle-fill"></i> Experiencia:</h5>
                    <p class="card-text">{{ student.experience }}</p>
                </div>
            </div>
        {% else %}
            <p>No se encontraron estudiantes</p> 
        {% endfor %}
{% endblock %}
