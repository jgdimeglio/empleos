{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <h1>Student</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ student.name }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ student.surname }}</td>
            </tr>
            <tr>
                <th>Tipo de documento</th>
                <td>{{ student.documentType }}</td>
            </tr>
            <tr>
                <th>Número de documento</th>
                <td>{{ student.documentNumber }}</td>
            </tr>
            <tr>
                <th>Fecha de nacimiento</th>
                <td>{{ student.birthDate ? student.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ student.mail }}</td>
            </tr>
            <tr>
                <th>Experiencia</th>
                <td>{{ student.experience }}</td>
            </tr>
            <tr>
                <th>Carrera</th>
                <td>{{ student.career }}</td>
            </tr>
            <tr>
                <th>Año ingreso a la carrera</th>
                <td>{{ student.yearCareer }}</td>
            </tr>
            <tr>
                <th>Fecha de publicación</th>
                <td>{{ student.published ? student.published|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('student_index') }}">Volver al listado</a>

{% endblock %}
